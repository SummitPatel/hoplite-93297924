// hides the old header bar with the cart
.header-bar {
  padding: 0;
}

.site-header {
  position: absolute;
  z-index: 2;
  left: 0;
  right: 0;
  padding: 0;

  transition: all 1s ease;

  &.fixed-header {
    @include at-query($min, $postSmall) {
      position: fixed;
      background-color: #000;

      .wrapper {
        height: 60px;
        padding: 0 8vw;

        .grid--full.display-table {
          height: 60px;
        }

        .site-header__logo img {
          height: 35px;
        }

      }
    }
  }

  img {
    @include at-query($max, $small) {
      max-height: 10vw;
    }
  }

  .wrapper {
    padding: 3vh 8vw;
    max-width: 100%;
  }

  .cart-page-link {
    font-size: 1rem;
    padding-top: 8px;
    padding-bottom: 0;
  }
}

.site-nav__link {
  color: #fff;
  font-family: 'PF DIN Text Pro Bold';
  text-transform: uppercase;
  font-size: .7rem;

  &:active, &:hover, &:focus {
    color: #fff;
  }

}

.icon-cart {
  color: #fff;
}

.mobile-nav-trigger {
  .icon {
    color: #fff;
    font-size: 7vw;
  }
}

.mobile-nav {
  text-align: center;
  height: 100vh;
  background: #000;
  opacity: .8;
  position: fixed;
  width: 100%;

  .x-btn {
    float: right;
    margin: 5vw 8vw;
    opacity: 1;
  }

  li {
    height: 12vh;
    border: none;

    &:first-of-type {
