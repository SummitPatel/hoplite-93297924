.frontpage-wrapper {
  margin: 0;
  padding: 0;  
  max-width: 1600px;
}

.centered {
  text-align: center;
}

.centered-padded {
  text-align: center;
  margin: 0 auto;
  width: 99%;
}

.padded {
  padding-right: 1%;
  padding-bottom: .1%;
  /* padding-left is inherited from the Timber framework*/
}

.padded-half-first {
  padding-right: 0;
  padding-bottom: 0;
}

.padded-half-second {
  padding-left: 1%;
  padding-bottom: 0;
}

.hero {
  margin-bottom: 2rem;
}