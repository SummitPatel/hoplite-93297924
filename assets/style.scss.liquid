.site-header {
  position: absolute;
  z-index: 2;
  left: 0;
  right: 0;
  padding: 0;

  transition: all 1s ease;

  &.fixed-header {
    @include at-query($min, $postSmall) {
      position: fixed;
      background-color: #000;

      .wrapper {
        height: 60px;
        padding: 0 8vw;

        .grid--full.display-table {
          height: 60px;
        }

        .site-header__logo img {
          height: 35px;
        }

      }
    }
  }

  img {
    @include at-query($max, $small) {
      max-height: 10vw;
    }
  }

  .wrapper {
    padding: 3vh 8vw;
    max-width: 100%;
  }

  .cart-page-link {
