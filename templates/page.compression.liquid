      <div class="tile-wrapper infographic familiar-infographic">
        <a href="prev" class="prev"><img src="{{ 'link-arrow-black-reverse.png' | asset_url }}" alt=""></a>
        <div class="slider familiar-slider">
          <ul class="slides">
            <li>
              <div class="slider-content text-wrapper">
