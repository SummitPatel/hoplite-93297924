{% if settings.home_page_content != empty %}
  {% unless settings.home_page_full_width %}
  <div class="grid">
    <div class="grid__item post-large--two-thirds push--post-large--one-sixth">
  {% endunless %}
      {% if settings.home_show_headings and settings.home_page_show_heading %}
      <div class="section-header section-header--small">
        <h2 class="section-header__title">{{ pages[settings.home_page_content].title }}</h2>
      </div>
      {% endif %}
      <div class="rte">
        <!-- Old include statement to pull in content from Shopify-->
        <!-- {{ pages[settings.home_page_content].content }} -->

        <div class="grid">
          <div class="grid__item">
            {{ pages.hero-homepage.content }}
          </div>

          <div class="grid grid__item centered-padded full-width">

            <div class="grid__item centered no-padding">
              {{ pages.worlds-toughest-workouts.content }}
            </div>

            <div class="grid__item centered no-padding">
              {{ pages.insane-abrasion-protection.content }}
            </div>
            <div class="grid__item centered no-padding">
              {{ pages.rip-and-tear-proof.content }}
            </div>
            <div class="grid__item centered no-padding">
              {{ pages.eerily-cold.content }}
            </div>
            <div class="grid__item centered no-padding">
              {{ pages.perfectly-balanced-compression.content }}
            </div>
          </div>

            <div class="grid grid__item centered-padded">

              <div class="grid__item large--one-half padded padded-half-first">
                {{ pages.designed-and-knit.content }}
              </div>
              <div class="grid__item large--one-half padded padded-half-second">
                {{ pages.buy-give-homepage.content }}
              </div>

              <div class="grid__item padded">
                <img src="//placehold.it/1600x250" />
              </div>

              <div class="grid__item large--one-half padded padded-half-first">
                <img src="//placehold.it/1600x250" />
              </div>
              <div class="grid__item large--one-half padded padded-half-second">
                {{ pages.leg-sleeves-homepage.content }}
              </div>

            </div>
            

        </div>
      </div>
  {% unless settings.home_page_full_width %}
    </div>
  </div>
  {% endunless %}
{% endif %}
