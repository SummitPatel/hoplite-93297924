@media screen and (max-width: 480px) {
  .padded {
    padding-right: 1%;
    padding-bottom: 1%;
    padding-left: 2%;
  }
}


@media screen and (min-width: 481px) {

  .padded {
    padding-right: 1%;
    padding-bottom: 1%;
    /* padding-left is inherited from the Timber framework*/
  }

  .padded-half-first {
    padding-top: 1%;
    padding-right: 0;
    padding-bottom: 1%;
  }

  .padded-half-second {
    padding-top: 1%;
    padding-left: 1%;
    padding-bottom: 1%
  }
}

